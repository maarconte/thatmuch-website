---
import Footer from "@/components/footer.astro";
import Header from "@/components/header.astro";
import Metadata from "@/components/metadata.astro";
import PostPagination from "@/components/post-pagination.astro";

import { ViewTransitions } from "astro:transitions";

interface Props {
  author: string;
  description: string;
  title: string;
  slug?: string;
  image?: string;
}

const { author, image, description, slug, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Metadata
      author={author}
      title={title}
      description={description}
      slug={slug}
      ogImage={image}
    />
    <ViewTransitions />
  </head>
  <body class="">
    <div class="container flex flex-col min-h-screen">
      <Header />
      <article class="w-2/3 container mb-8">
        {
          slug && (
            <h1 class="font-bold font-trebuchet text-xl text-gray-carbon">
              {title}
            </h1>
          )
        }
        <slot />
      </article>
      <Footer />
    </div>
  </body>
</html>
