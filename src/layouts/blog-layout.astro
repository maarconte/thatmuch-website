---
import Footer from "@/components/footer.astro";
import Header from "@/components/header.astro";
import Metadata from "@/components/metadata.astro";

import { ViewTransitions } from "astro:transitions";

interface Props {
  author: string;
  description: string;
  title: string;
  slug?: string;
}

const { author, description, slug, title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <Metadata
      author={author}
      title={title}
      description={description}
      slug={slug}
    />
    <ViewTransitions />
  </head>
  <body class="">
    <Header />
    <main class="container flex flex-col min-h-screen gap-14">
      <h1>{title}</h1>
      <slot name="posts" />
    </main>
    <Footer />
  </body>
</html>
